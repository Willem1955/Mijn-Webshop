<body>
  <h1>Mijn Mini Webshop</h1>

  <div id="products"></div>

  <div id="cart">
    <h2>ðŸ›’ Winkelmandje</h2>
    <ul id="cart-items"></ul>
    <p><strong>Totaal:</strong> â‚¬<span id="total">0.00</span></p>
    <button onclick="checkout()">Afrekenen (fictief)</button>
  </div>

  <script>
    const products = [
      { name: "T-shirt", price: 19.99 },
      { name: "Mok", price: 9.99 },
      { name: "Pet", price: 14.99 }
    ];

    const productContainer = document.getElementById('products');
    const cartItems = document.getElementById('cart-items');
    const total = document.getElementById('total');
    let cart = [];

    products.forEach(p => {
      const div = document.createElement('div');
      div.className = 'product';
      div.innerHTML = `<div><h3>${p.name}</h3><p>â‚¬${p.price.toFixed(2)}</p></div>
                       <button onclick="addToCart('${p.name}', ${p.price})">Voeg toe</button>`;
      productContainer.appendChild(div);
    });

    function addToCart(name, price) {
      cart.push({ name, price });
      renderCart();
    }

    function renderCart() {
      cartItems.innerHTML = cart.map(c => `<li>${c.name} - â‚¬${c.price.toFixed(2)}</li>`).join('');
      total.textContent = cart.reduce((sum, c) => sum + c.price, 0).toFixed(2);
    }

    function checkout() {
      alert('Bedankt voor je bestelling! (Dit is een demo)');
      cart = [];
      renderCart();
    }
  </script>
</body>
